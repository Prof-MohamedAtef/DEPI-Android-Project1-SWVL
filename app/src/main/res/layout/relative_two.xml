<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/arrow_id"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_left"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_alignEnd="@id/arrow_id"
        android:layout_alignStart="@id/arrow_id"
        android:textSize="18sp"
        android:layout_below="@+id/arrow_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="age"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_alignTop="@id/arrow_id"
        android:layout_toRightOf="@id/arrow_id"
        android:layout_alignBottom="@id/arrow_id"/>
</RelativeLayout>