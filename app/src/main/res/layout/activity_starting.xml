<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".excercise.seight.intents.StartingActivity">
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/label_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name:"/>
    <EditText
        android:hint="@string/enter_your_name"
        android:id="@+id/nameEditText"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/label_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/label_age"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/age_label"/>
    <EditText
        android:hint="@string/enter_your_age"
        android:id="@+id/ageEditText"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/label_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_send_data"
        android:layout_marginBottom="40dp"
        app:layout_constraintEnd_toEndOf="@id/nameEditText"
        app:layout_constraintStart_toStartOf="@+id/nameEditText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/send_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapLauncher"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_map_launcher_custom"
        app:layout_constraintTop_toBottomOf="@+id/ageEditText"
        app:layout_constraintStart_toStartOf="@+id/ageEditText"/>
    <EditText
        android:id="@+id/friendEditPhone"
        app:layout_constraintTop_toBottomOf="@+id/mapLauncher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:hint="Enter friend's phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/callIntentLauncher"
        app:layout_constraintTop_toBottomOf="@id/friendEditPhone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="25dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/call_green_background">
        <ImageView
            android:src="@drawable/ic_call_phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>