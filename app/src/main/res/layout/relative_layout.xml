<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/boarding_pass_id"
        layout="@layout/boarding_pass_app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/boarding_pass_id"
        android:background="@color/blue2">

        <TextView
            android:id="@+id/tv_user_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/boarding_text"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_user_advice"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_view">

            <LinearLayout
                android:id="@+id/gray_linear_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <View
                    android:layout_width="70dp"
                    android:layout_height="8dp"
                    android:background="@color/gray" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_driver_details_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gray_linear_id"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic_id"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="30dp"
                    android:src="@color/yellow"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bus_image_id"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="-5dp"
                    android:src="@color/gray"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="2dp"
                    app:layout_constraintBottom_toBottomOf="@id/profile_pic_id"
                    app:layout_constraintStart_toEndOf="@+id/profile_pic_id"
                    app:layout_constraintTop_toTopOf="@id/profile_pic_id" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Abanoub Fayeq Boktor"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/profile_pic_id"
                    app:layout_constraintStart_toEndOf="@+id/bus_image_id"
                    app:layout_constraintTop_toTopOf="@id/profile_pic_id" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/constraint_driver_details_id"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <include
                    layout="@layout/red_call_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <include
                    layout="@layout/cancel_trip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>



        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>